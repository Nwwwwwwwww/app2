<div class="edit">
	<h1 class="edit_heaging">Editing Book</h1>

	<%=form_with model:@book do |f| %>

	  <p>
	  	<%= f.label :title, "Title" %> <br>
	    <%= f.text_field :title, class: "book_title" %>
	  </p>
	  <p>
	  	<%= f.label :body, "Body" %> <br>
	    <%= f.text_area :body, class: "book_body" %>
	  </p>

	  <p> <%= f.submit "Update Book" %> </p>
	<% end %>

	<%= link_to "Show",booker_path(@booker.id) ,class: "show_#{@booker.id}"%>
	<span> | </span>
	<%= link_to "Back",bookers_path ,class: "back" %>
</div>
